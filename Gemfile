source 'https://gems.ruby-china.org'

gem 'rails', '~> 5.0.0', '>= 5.0.0.1'

gem 'rails-api'

gem 'pg'

gem 'sqlite3'

# Allow Cors
gem 'rack-cors', require: 'rack/cors'

group :development, :test do
  gem 'factory_girl_rails'
end

group :development do
  # Deploy with Capistrano
  gem 'capistrano'

  # Reload using spring
  gem 'spring'

  gem 'web-console'
end

group :test do
  gem 'rspec'
end
